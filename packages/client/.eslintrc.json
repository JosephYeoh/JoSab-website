{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [2, { "extensions": [".jsx", ".ts", ".tsx"] }],
        "arrow-parens": "off",
        "react/prop-types": [0],
        "react/jsx-props-no-spreading": [0],
        "no-unused-vars": "off",
        "import/extensions": [0],
        "import/no-unresolved": [0],
        "react/jsx-one-expression-per-line": [0],
        "no-multi-spaces": "warn",
        "object-curly-spacing": "warn",
        "no-nested-ternary": "off",
        "max-len": "warn",
        "operator-linebreak": "off",
        "prettier/prettier": [1]
    },
    "settings": {
        "react": {
            "version": "detetect"
        }
    }
}
